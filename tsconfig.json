{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": "./src",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Node",
    "paths": {},
    "outDir": "./build"
  },
  "include": ["./src/**/*.ts"]
}
