{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": "./src",
    "module": "ES2020",
    "moduleResolution": "Node",
    "paths": {},
    "types": ["jest"]
  },
  "include": ["./src/**/*.ts"]
}
